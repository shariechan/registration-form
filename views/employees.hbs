<div class="max-w-md mx-auto p-6 bg-white rounded shadow-md mt-8">
    <h2 class="text-2xl mb-4">Register your employee!</h2>
    <form action="/employees" method="post">
        <div class="mb-4">
            <label for="name" class="block text-sm font-medium text-gray-700">First Name:</label>
            <input type="text" id="FirstName" name="FirstName" required class="mt-1 p-2 w-full border rounded-md">
        </div> 
        <div class="mb-4">
            <label for="email" class="block text-sm font-medium text-gray-700">Last Name:</label>
            <input type="text" id="LastName" name="LastName" required class="mt-1 p-2 w-full border rounded-md">
        </div>
        <div class="mb-4">
            <label for="email" class="block text-sm font-medium text-gray-700">Age:</label>
            <input type="number" id="Age" name="Age" required class="mt-1 p-2 w-full border rounded-md">
        </div>
        <div>
            <button type="submit" class="bg-pink-500 text-white px-4 py-2 rounded hover:bg-blue-600">Register</button>
        </div>
    </form>
</div>
